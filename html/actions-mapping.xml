	<alias name="/r_snapshots.php" target="/components/r_snapshots.php" />
	<alias name="/snapshots" target="/components/snapshots" />
	
	<action name="/index.html" id="home">
		<controller class="com.itoglobal.mvc.defaults.BaseActionControllerImpl" />
