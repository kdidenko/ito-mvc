	</action>

	<action name="/about.html" id="about">
		<controller class="com.itoglobal.mvc.defaults.BaseActionControllerImpl" />
		<template name="index.html" path="templates/layout-two-columns.html" />
	</action>	
	
	<action name="/overview.html" id="home">
		<controller class="com.itoglobal.mvc.defaults.BaseActionControllerImpl" />
