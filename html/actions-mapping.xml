		<template name="index.html" path="templates/layout-one-column.html" />	
	</action>
	
	<action name="/messages.html" id="messages">
		<controller class="com.itoglobal.mvc.defaults.BaseActionControllerImpl" />
		<template name="index.html" path="templates/layout-two-columns.html" />	
	</action>
	
	<action name="/manage-courses.html" id="managecourses">
		<controller class="com.itoglobal.mvc.defaults.BaseActionControllerImpl" />
		<template name="index.html" path="templates/layout-two-columns.html" />
		<forwards>
			<target location="/home.html" name="home" condition="onfailure"/>
		</forwards>
	</action>
	
	<action name="/course-details.html" id="coursedetails">
		<role type="MR">
		<controller class="com.itoglobal.mvc.defaults.BaseActionControllerImpl"	/>
			<template name="index.html" path="templates/layout-two-columns.html" />
		</role>
		<controller class="com.itoglobal.mvc.defaults.BaseActionControllerImpl"	/>
		<template name="index.html" path="templates/layout-one-column.html" />
	</action>
	
	<action name="/manage-users.html" id="manageusers">
		<controller class="com.itoglobal.mvc.defaults.BaseActionControllerImpl" />
		<template name="index.html" path="templates/layout-two-columns.html" />
		<forwards>
			<target location="/index.html" name="home" condition="onfailure"/>
		</forwards>
	</action>

	<action name="/login.html" id="login">
		<controller class="com.itoglobal.users.AuthenticationController" 
			method="login" />
		<forwards>
			<target location="/index.html" name="home" condition="onsuccess"/>
			<target location="/login-failed.html" name="login-failed" condition="onfailure"/>		
		</forwards>
	</action>
	
	<action name="/signout.html" id="signout">
		<controller class="com.itoglobal.users.AuthenticationController" 
			method="logout" />
		<forwards>
			<target location="/index.html" name="home" condition="onsuccess"/>
		</forwards>
	</action>
	
	<action name="/login-failed.html" id="loginfailed">
		<controller class="com.itoglobal.mvc.defaults.BaseActionControllerImpl" />
		<template name="index.html" path="templates/layout-two-columns.html"/>
	</action>
	
	<action name="/reset-password.html" id="resetpassword">
		<controller class="com.itoglobal.users.RegistrationController" method="resetPassword"/>
		<template name="index.html" path="templates/layout-one-column.html"/>
		<forwards>
			<target location="/check-email.html" name="check-email" condition="onsuccess"/>		
		</forwards>
		<property name="template" value="templates/plain/reset-password.txt"/>
	</action>
	
	<action name="/new-password.html" id="newpassword">
		<controller class="com.itoglobal.users.RegistrationController" method="newPassword"/>
		<template name="index.html" path="templates/layout-one-column.html"/>
		<forwards>
			<target location="/login-failed.html" name="login-failed" condition="onsuccess"/>
			<target location="/reset-password.html" name="reset-password" condition="onfailure"/>		
		</forwards>
	</action>
	
	<action name="/check-email.html" id="checkemail">
		<controller class="com.itoglobal.mvc.defaults.BaseActionControllerImpl" />
		<template name="index.html" path="templates/layout-one-column.html"/>
	</action>
	
	<action name="/registration.html" id="registration">
		<role type="VR">
			<controller class="com.itoglobal.users.RegistrationController" method="registration"/>
			<template name="index.html" path="templates/layout-one-column.html" />	
			<forwards>
				<target location="registration.html" name="registration" condition="onfailure"/>
				<target location="validation.html" name="validation" condition="onsuccess"/>
			</forwards>
			<property name="template" value="templates/plain/email-confirmation.txt"/>
		</role>
		<controller class="com.itoglobal.mvc.defaults.BaseActionControllerImpl" />
		<template name="index.html" path="templates/crash.html" />
	</action>

	<action name="/validation.html" id="validation">
		<controller class="com.itoglobal.mvc.defaults.BaseActionControllerImpl" />
		<template name="index.html" path="templates/layout-one-column.html" />	
	</action>
	
	<action name="/confirm-registration.html" id="loginfailed">
		<controller class="com.itoglobal.users.RegistrationController" method="registration"/>
		<template name="index.html" path="templates/layout-two-columns.html" />
	</action>

	<action name="/scope.html" id="scope">
		<controller class="com.itoglobal.mvc.defaults.BaseActionControllerImpl" />
		<template name="index.html" path="templates/layout-one-column.html" />	
	</action>

	<action name="/scope-create.html" id="scope-create">
		<controller class="com.itoglobal.scopes.ScopeController" 
			method="createScope"/>
		<template name="scope.html" path="templates/scope.html" />	
	</action>

	<action name="/scope-delete.html" id="scope-delete">
		<controller class="com.itoglobal.scopes.ScopeController" 
			method="deleteScope"/>
		<template name="scope.html" path="templates/scope.html" />	
	</action>
	
	<!-- Navigation views mapping begin -->
	<action name="/navigation-*.html" id="navigation-$1">
		<controller class="com.itoglobal.lcms.controllers.NavigationController"/>
		<template name="$1.html">
			<role type="VR" path="templates/views/navigation/default/top-menu.html"/>
			<role type="UR" path="templates/views/navigation/users/top-menu.html"/>
			<role type="MR" path="templates/views/navigation/moderator/top-menu.html"/>
			<role type="AR" path="templates/views/navigation/admin/top-menu.html"/>		
		</template>	
	</action>
	<!-- Navigation views mapping end -->	
	
	<!-- Sidebar views mapping begin -->
	<action name="/sidebar-*.html" id="sidebar">
		<controller class="com.itoglobal.lcms.controllers.SidebarController" 
				method="handle$1" />
		<template name="$1.html">
			<role type="VR" path="templates/views/sidebars/default/login-form.html"/>
			<role type="UR" path="templates/views/sidebars/users/$1.html"/>
			<role type="MR" path="templates/views/sidebars/moderator/$1.html"/>
			<role type="AR" path="templates/views/sidebars/admin/$1.html"/>		
		</template>	
	</action>
	<!-- Sidebar views mapping end -->	
	
	<!-- Content views mapping begin -->
	<action name="/content-*.html" id="content">
		<role type="AR">
			<controller class="com.itoglobal.lcms.controllers.AdminContentController" method="handle$1" />
			<template name="content-$1.html" path="templates/views/content/admin/$1.html" />
			<property name="template" value="templates/plain/created-account.txt"/>
		</role>
		<role type="MR">
			<controller class="com.itoglobal.lcms.controllers.ModeratorContentController" method="handle$1" />
			<template name="content-$1.html" path="templates/views/content/moderator/$1.html" />
			<property name="template" value="templates/plain/created-account.txt"/>
			<forwards>
				<target location="/index.html" name="home" condition="onfailure"/>
			</forwards>
		</role>
		<role type="UR">
			<controller class="com.itoglobal.lcms.controllers.UserContentController" method="handle$1" />
			<template name="content-$1.html" path="templates/views/content/users/$1.html" />
			<forwards>
				<target location="/index.html" name="home" condition="onfailure"/>
				<target location="/my-trainings.html" name="mytrainings" condition="onsuccess"/>
			</forwards>
		</role>
		<role type="VR">
			<controller class="com.itoglobal.lcms.controllers.ContentController" method="handle$1" />
			<template name="content-$1.html" path="templates/views/content/default/$1.html" />
		</role>
	</action>
	<!-- Content views mapping end -->
	
	<!-- Footer views mapping begin -->
	<action name="/footer-*.html" id="footer-$1">
		<controller class="com.itoglobal.lcms.controllers.NavigationController"/>
		<template name="$1.html">
			<role type="VR" path="templates/views/navigation/default/footer.html"/>
			<role type="UR" path="templates/views/navigation/users/footer.html"/>
			<role type="MR" path="templates/views/navigation/moderator/footer.html"/>
			<role type="AR" path="templates/views/navigation/admin/footer.html"/>		
		</template>	
	</action>
	<!-- Footer views mapping end -->	
	
	<!--  Schools management actions begin -->
	<action name="/*-schools.html" id="$1schools">
		<controller class="com.itoglobal.mvc.defaults.BaseActionControllerImpl"	/>
		<template name="index.html" path="templates/layout-two-columns.html" />
	</action>
	<!--  Schools management actions end -->	
	
	<!--  Exercises management actions begin -->
	<action name="/*-exercises.html" id="$1exercises">
		<controller class="com.itoglobal.mvc.defaults.BaseActionControllerImpl"	/>
		<template name="index.html" path="templates/layout-two-columns.html" />
	</action>
	<!--  Exercises management actions end -->
	
	<!--  Categories management actions begin -->
	<action name="/*-categories.html" id="$1categories">
		<controller class="com.itoglobal.mvc.defaults.BaseActionControllerImpl"	/>
		<template name="index.html" path="templates/layout-two-columns.html" />
	</action>
	<!--  Categories management actions end -->
	
	<action name="/school-details.html" id="schooldetails">
		<role type="AR">
			<controller class="com.itoglobal.mvc.defaults.BaseActionControllerImpl"	/>
			<template name="index.html" path="templates/layout-two-columns.html" />
		</role>
		<role type="MR">
		<controller class="com.itoglobal.mvc.defaults.BaseActionControllerImpl"	/>
			<template name="index.html" path="templates/layout-two-columns.html" />
		</role>
		<controller class="com.itoglobal.mvc.defaults.BaseActionControllerImpl"	/>
		<template name="index.html" path="templates/layout-one-column.html" />
	</action>

	<action name="/exercise-details.html" id="exercisedetails">
		<role type="MR">
		<controller class="com.itoglobal.mvc.defaults.BaseActionControllerImpl"	/>
			<template name="index.html" path="templates/layout-two-columns.html" />
		</role>
