	<action name="/school-assigned.html" id="schoolassigned">
		<controller class="com.itoglobal.mvc.defaults.BaseActionControllerImpl" />
		<template name="index.html" path="templates/layout-two-columns.html" />
	</action>
	
	<action name="/edit-*.html" id="edit$1">
		<controller class="com.itoglobal.mvc.defaults.BaseActionControllerImpl" />
		<template name="index.html" path="templates/layout-one-column.html" />
		<forwards>
			<target location="/manage-$1s.html" name="manage$1s" condition="onsuccess"/>
		</forwards>
	</action>
	
	<action name="/new-*.html" id="new$1">
		<controller class="com.itoglobal.mvc.defaults.BaseActionControllerImpl" />
		<template name="index.html" path="templates/layout-one-column.html" />
		<forwards>
			<target location="/manage-$1s.html" name="manage$1s" condition="onsuccess"/>
		</forwards>
	</action>
	
	<action name="/start-challenge.html" id="startchallenge">
		<role type="UR">
			<controller class="com.itoglobal.mvc.defaults.BaseActionControllerImpl" />
			<template name="index.html" path="templates/layout-one-column.html" />
		</role>
	</action>
	
	<action name="/videorecorder.html" id="videorecorder">
		<controller class="com.itoglobal.mvc.defaults.BaseActionControllerImpl" />
		<template name="index.html" path="components/videorecorder.html" />
	</action>
	
	<action name="/components/*" id="$1">
		<controller class="com.itoglobal.mvc.defaults.BaseActionControllerImpl" />
		<template name="index.html" path="components/$1" />
	</action>	
	
</actions>